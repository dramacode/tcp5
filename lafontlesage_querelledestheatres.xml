        <castItem><role xml:id="LACOMEDIEITALIENNE" id="LA COMÉDIE ITALIENNE" sex="2" type="P" statut="insitution" age="A" stat_amour="néant">LA COMÉDIE ITALIENNE</role>.</castItem>
        <castItem><role xml:id="LOPERA" id="L'OPÉRA" sex="1" type="P" statut="institution" age="A" stat_amour="néant">L'OPÉRA</role>, Arlequin.</castItem>
        <castItem><role xml:id="LAFOIRE" id="LA FOIRE" sex="2" type="P" statut="institution" age="A" stat_amour="néant">LA FOIRE</role>, Pierrot.</castItem>
