        <castItem><role xml:id="POLICHINELLE" id="POLICHINELLE" sex="1" type="H" statut="comédien" age="A" stat_amour="néant">POLICHINELLE</role>, Suivant de la Foire.</castItem>
        <castItem><role xml:id="UNGILLE" id="GILLE" sex="1" type="H" statut="comédien" age="A" stat_amour="néant">UN GILLE</role>, Suivant de la Foire.</castItem>
        <castItem><role xml:id="UNAUTEURTRAGIQUE" id="UN AUTEUR TRAGIQUE" sex="1" type="H" statut="auteur" age="A" stat_amour="néant">UN AUTEUR TRAGIQUE</role>, suivant de la Comédie Française.</castItem>
        <castItem><role xml:id="UNACTEURhabilléàlaRomaine" id="UN ACTEUR" sex="1" type="H" statut="comédien" age="A" stat_amour="néant">UN ACTEUR habillé à la Romaine</role>, suivant de la Comédie Française.</castItem>
        <castItem><role xml:id="UNCRISPIN" id="CRISPIN" sex="1" type="H" statut="comédien" age="A" stat_amour="néant">UN CRISPIN</role>, suivant de la Comédie Française.</castItem>
        <castItem><role xml:id="UNPANTALON" id="PANTALON" sex="1" type="H" statut="comédien" age="A" stat_amour="néant">UN PANTALON</role>, suivant de la Comédie Italienne.</castItem>
        <castItem><role xml:id="UNSCAPIN" id="SCAPIN" sex="1" type="H" statut="comédien" age="A" stat_amour="néant">UN SCAPIN</role>, suivant de la Comédie Italienne.</castItem>
