      <castList>
        <head>PERSONNAGES</head>
        <castItem><role xml:id="MONSIEURDEBOURVAL" id="MONSIEUR-DE-BOURVAL" sex="1" type="H" statut="bourgeois" age="A" stat_amour="amoureux">MONSIEUR DE BOURVAL</role>.</castItem>
        <castItem><role xml:id="MADEMOISELLEDESAINTEDME" rend="junior" id="MADEMOISELLE DE SAINT-EDME" sex="2" type="H" statut="aristocrate" age="J" stat_amour="amant">MADEMOISELLE DE SAINT-EDME</role>.</castItem>
        <castItem><role xml:id="LECHEVALIERDEGORVILLE" id="LE CHEVALIER DE GORVILLE" sex="1" type="H" statut="chevalier" age="A" stat_amour="amant">LE CHEVALIER DE GORVILLE</role>.</castItem>
        <castItem><role xml:id="SOPHIE" id="SOPHIE" sex="2" type="H" statut="femme de chambre" age="A" stat_amour="néant">SOPHIE</role>, femme de chambre de Mademoiselle de Saint-Edme.</castItem>
        <castItem><role xml:id="MONSIEURDORSANT" id="MONSIEUR D'ORSANT" sex="1" type="H" statut="aristocrate" age="A" stat_amour="néant">MONSIEUR D’ORSANT</role>, oncle du Chevalier de Gorville.</castItem>
